{
    "name": "TelecomsCloud",
    "apiVersion": "v1",
    "description": "TelecomsCloud REST API Client",
    "operations": {
        "check": {
            "httpMethod": "GET",
            "uri": "/v1/check",
            "responseModel":  "getResponse"
        },
        "echo":  {
            "httpMethod":  "GET",
            "uri":  "/v1/echo/{myString}",
            "responseModel":  "getResponse",
            "parameters":  {
                "myString":  {
                    "type":  "string",
                    "location":  "uri",
                    "required": true
                }
            }
        },
        "formatNumberE164": {
            "httpMethod": "GET",
            "uri": "/v1/format/number/e164/{number}/{location}{?pretty}",
            "responseModel":  "getResponse",
            "parameters": {
                "number": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "location": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "pretty": {
                    "type": "string",
                    "location": "query",
                    "required": false
                }
            }
        },
        "formatNumberNational": {
            "httpMethod": "GET",
            "uri": "/v1/format/number/national/{number}/{location}{?pretty}",
            "responseModel":  "getResponse",
             "parameters": {            
                "number": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "location": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "pretty": {
                    "type": "string",
                    "location": "query",
                    "required": false
                }
             }
        },
        "formatNumberInternational": {
            "httpMethod": "GET",
            "uri": "/v1/format/number/international/{number}/{providedLocation}/{dialFromLocation}{?pretty}",
            "responseModel":  "getResponse",
            "parameters": {
                "number": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "providedLocation": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "dialFromLocation": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "pretty": {
                    "type": "string",
                    "location": "query",
                    "required": false
                }
            }
        },
        "formatNumberPretty": {
            "httpMethod": "GET",
            "uri": "/v1/format/number/pretty/{number}/{location}",
            "responseModel":  "getResponse",
            "parameters": {
                "number": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "location": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                }
            }
        },
        "oauth2AuthorizeCode": {
            "httpMethod": "POST",
            "uri": "/v1/authorization/oauth2/authorize-code",
            "responseModel":  "authCodeResponse",
            "parameters": {
                "authorize": {
                  "type": "bool",
                  "location": "body",
                  "required": true
                },
                "client_id": {
                  "type": "string",
                  "location": "body",
                  "required": true
                },
                "state": {
                  "type": "string",
                  "location": "body",
                  "required": true
                }
            }
        },
        "oauth2GrantCode": {
            "httpMethod": "POST",
            "uri": "/v1/authorization/oauth2/grant-code",
            "responseModel":  "getResponse",
            "parameters": {
                "code": {
                  "type": "string",
                  "location": "body",
                  "required": true
                },
                "client_id": {
                  "type": "string",
                  "location": "body",
                  "required": true
                },
                "client_secret": {
                  "type": "string",
                  "location": "body",
                  "required": true
                }
            }
        },
        "oauth2GrantRefresh": {
            "httpMethod": "POST",
            "uri": "/v1/authorization/oauth2/grant-refresh",
            "responseModel":  "getResponse",
            "parameters": {
                "refresh_token": {
                  "type": "string",
                  "location": "body",
                  "required": true
                },
                "client_id": {
                  "type": "string",
                  "location": "body",
                  "required": true
                },
                "client_secret": {
                  "type": "string",
                  "location": "body",
                  "required": true
                }
            }
        }
    },
    "models":  {
        "getResponse":  {
            "type":  "object",
            "additionalProperties":  {
                "location":  "json"
            }
        },
        "authCodeResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "location": "header",
                    "sentAs": "location",
                    "type": "string",
                    "filters": [
                        {
                          "method": "\\Tc\\Phapic\\Filters::extractQueryParams",
                          "args": ["@value"]
                        }
                    ]
                }
            }
        }
    }
}