{
    "name": "TelecomsCloud",
    "apiVersion": "v1",
    "description": "TelecomsCloud REST API Client",
    "operations": {
        "formatNumberE164": {
            "httpMethod": "GET",
            "uri": "/v1/format/number/e164/{number}/{location}{?pretty}",
            "responseModel":  "getResponse",
            "parameters": {
                "number": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "location": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "pretty": {
                    "type": "string",
                    "location": "query",
                    "required": false
                }
            }
        },
        "formatNumberNational": {
            "httpMethod": "GET",
            "uri": "/v1/format/number/national/{number}/{location}{?pretty}",
            "responseModel":  "getResponse",
             "parameters": {
                "number": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "location": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "pretty": {
                    "type": "string",
                    "location": "query",
                    "required": false
                }
             }
        },
        "formatNumberInternational": {
            "httpMethod": "GET",
            "uri": "/v1/format/number/international/{number}/{providedLocation}/{dialFromLocation}{?pretty}",
            "responseModel":  "getResponse",
            "parameters": {
                "number": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "providedLocation": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "dialFromLocation": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "pretty": {
                    "type": "string",
                    "location": "query",
                    "required": false
                }
            }
        },
        "formatNumberPretty": {
            "httpMethod": "GET",
            "uri": "/v1/format/number/pretty/{number}/{location}",
            "responseModel":  "getResponse",
            "parameters": {
                "number": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "location": {
                    "type": "string",
                    "location": "uri",
                    "required": true
                }
            }
        },
        "oauth2GrantClient": {
          "httpMethod": "POST",
          "uri": "/v1/authorization/oauth2/grant-client",
          "responseModel":  "getResponse",
          "parameters": {
            "client_id": {
              "type": "string",
              "location": "json",
              "required": true
            },
            "client_secret": {
              "type": "string",
              "location": "json",
              "required": true
            }
          }
        },
        "accountInfo": {
          "httpMethod": "GET",
          "uri" : "/v1/account/info",
          "responseModel" : "getResponse"
        },
        "getFaxInfo": {
          "httpMethod": "GET",
          "uri": "/v1/fax/inbound/info{?last_pointer}",
          "responseModel": "getResponse",
            "parameters": {
              "last_pointer": {
                "type": "string",
                "location": "query",
                "required": true
              }
            }
        },
        "getInboundFax": {
          "httpMethod": "GET",
          "uri": "/v1/fax/inbound/{id}",
          "responseModel": "locationLink",
            "parameters": {
              "id": {
                "type": "string",
                "location": "path",
                "required": true
              }
          }
        }
    },
    "models":  {
        "getResponse":  {
            "type":  "object",
            "additionalProperties":  {
                "location":  "json"
            }
        },
        "authCodeResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "location": "header",
                    "sentAs": "location",
                    "type": "string",
                    "filters": [
                        {
                          "method": "\\Tc\\Phapic\\Filters::extractCodeFromQueryParams",
                          "args": ["@value"]
                        }
                    ]
                }
            }
        },
        "locationLink": {
            "type": "object",
            "properties": {
                "downloadLink": {
                    "location": "header",
                    "sentAs": "location",
                    "type": "string"
                }
            }
        }
    }
}